<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foxappdevelopment.playingcardsrecorder.AboutActivity"
    android:background="@color/divider"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/app_icon"
            android:id="@+id/about_icon_iv"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_icon" />

        <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_app_name"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="24sp" />

        <TextView
            android:text="@string/app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_version_num"
            android:textColor="@color/primary_text"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <TextView
            android:text="@string/links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_links_tv"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/primary" />

        <TextView
            android:text="@string/rate_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_rate_app_tv"
            android:textColor="@color/primary_text"
            android:padding="10dp"
            android:textSize="20sp"
            android:clickable="true" />

        <TextView
            android:text="@string/send_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_send_feedback_tv"
            android:textColor="@color/primary_text"
            android:padding="10dp"
            android:textSize="20sp"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <TextView
            android:text="@string/developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_dev_tv"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/primary"/>

        <TextView
            android:text="@string/samer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_samer_tv"
            android:textColor="@color/primary_text"
            android:padding="10dp"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>
